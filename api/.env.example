# Database Configuration
DATABASE_URL=postgresql://user:password@host:5432/database?sslmode=require

# External Service APIs
OPENAI_API_KEY=sk-...
GUMLOOP_API_KEY=your_gumloop_api_key
GUMLOOP_USER_ID=your_gumloop_user_id
GUMLOOP_FLOW_ID=your_gumloop_flow_id
YOUTUBE_API_KEY=your_youtube_api_key

# Performance Configuration
PROGRESS_TTL_HOURS=4
MAX_WORKERS=2
WORKER_TIMEOUT=60
HEALTH_CHECK_TIMEOUT=60

# Monitoring (Optional)
SENTRY_DSN=https://...
LOG_LEVEL=INFO

# Railway/Production Environment
RAILWAY_ENVIRONMENT=production
PORT=8000

# CORS Configuration (comma-separated)
ALLOWED_ORIGINS=https://sightlineai.io,https://www.sightlineai.io

# Connection Pool Settings
DB_POOL_MIN_SIZE=5
DB_POOL_MAX_SIZE=20
DB_COMMAND_TIMEOUT=30
DB_MAX_INACTIVE_CONNECTION_LIFETIME=300

# Circuit Breaker Settings
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_RECOVERY_TIMEOUT=60

# Resource Thresholds
MEMORY_THRESHOLD_PERCENT=80
CPU_THRESHOLD_PERCENT=90
CONNECTION_THRESHOLD_PERCENT=90