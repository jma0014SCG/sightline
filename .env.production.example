# Production Environment Variables Template
# Copy this file to .env.production and fill in your values

# App
NODE_ENV=production
NEXTAUTH_URL=https://your-domain.com
NEXTAUTH_SECRET=your-secure-random-string # Generate with: openssl rand -base64 32

# Database
DATABASE_URL=your-production-database-url

# Authentication
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Python Backend
PYTHON_BACKEND_URL=https://your-backend-url
PYTHON_API_KEY=your-secure-api-key

# Stripe
STRIPE_SECRET_KEY=sk_live_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret
STRIPE_PRICE_ID_PRO=price_your-pro-price-id
STRIPE_PRICE_ID_ENTERPRISE=price_your-enterprise-price-id

# Gumloop Integration (Optional)
GUMLOOP_API_KEY=your-gumloop-api-key
GUMLOOP_FLOW_ID_ENHANCED=your-enhanced-flow-id

# Security Headers
NEXT_PUBLIC_SITE_URL=https://your-domain.com
CSP_REPORT_URI=https://your-csp-report-endpoint.com

# Monitoring (Optional)
SENTRY_DSN=your-sentry-dsn
SENTRY_AUTH_TOKEN=your-sentry-auth-token
SENTRY_ORG=your-sentry-org
SENTRY_PROJECT=your-sentry-project

# Analytics (Optional)
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX
NEXT_PUBLIC_POSTHOG_KEY=your-posthog-key
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com