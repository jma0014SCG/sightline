{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "regions": ["iad1"],
  "functions": {
    "src/app/api/trpc/[trpc]/route.ts": {
      "maxDuration": 30
    },
    "src/app/api/webhooks/clerk/route.ts": {
      "maxDuration": 10
    },
    "src/app/api/webhooks/stripe/route.ts": {
      "maxDuration": 10
    }
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "Strict-Transport-Security",
          "value": "max-age=31536000; includeSubDomains"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/api/backend/:path*",
      "destination": "https://sightline-ai-backend-production.up.railway.app/api/:path*"
    }
  ],
  "redirects": [
    {
      "source": "/dashboard",
      "destination": "/library",
      "permanent": true
    }
  ],
  "trailingSlash": false,
  "cleanUrls": true
}