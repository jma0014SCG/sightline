{
  "name": "sightline",
  "version": "0.1.0",
  "description": "Speed-learn anything on YouTube - AI-powered video summarization",
  "private": true,
  "scripts": {
    "dev": "next dev -H 0.0.0.0 -p 3000",
    "build": "next build",
    "build:analyze": "ANALYZE=true next build",
    "build:prod": "NODE_ENV=production next build",
    "start": "next start",
    "lint": "next lint",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "lint:fix": "next lint --fix",
    "lint:md": "markdownlint '**/*.md' --ignore 'node_modules/**' --ignore 'venv/**' --ignore 'test-results/**' --ignore 'playwright-report/**'",
    "lint:md:fix": "markdownlint '**/*.md' --ignore 'node_modules/**' --ignore 'venv/**' --ignore 'test-results/**' --ignore 'playwright-report/**' --fix",
    "prepare": "test -d node_modules/husky && husky install || echo 'Skipping husky install'",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "db:seed": "tsx prisma/seed.ts",
    "create-test-user": "node scripts/create-test-user.js",
    "env:setup": "chmod +x scripts/setup-env.sh && scripts/setup-env.sh",
    "env:check": "node -e \"require('./src/lib/env.ts')\" && echo '✅ Environment variables are valid'",
    "env:validate": "tsx -e \"try { require('./src/lib/env.ts').default; console.log('✅ All environment variables are valid'); } catch(e) { console.error('❌ Environment validation failed:', e.message); process.exit(1); }\"",
    "deploy": "vercel --prod",
    "deploy:preview": "vercel",
    "vercel:link": "vercel link",
    "vercel:env": "vercel env pull .env.local",
    "api:dev": "cd api && ../venv/bin/python -m uvicorn index:app --reload --host 0.0.0.0 --port 8000",
    "dev:full": "concurrently \"pnpm dev\" \"pnpm api:dev\"",
    "api:test": "cd api && ../venv/bin/python -c \"from index import app; print('✅ FastAPI ready')\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPatterns='\\.(test|spec)\\.(js|jsx|ts|tsx)$'",
    "test:integration": "jest --testPathPatterns='integration'",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report"
  },
  "keywords": [
    "youtube",
    "summarization",
    "ai",
    "langchain"
  ],
  "author": "",
  "license": "MIT",
  "packageManager": "pnpm@10.13.1",
  "dependencies": {
    "@clerk/nextjs": "^6.28.0",
    "@mailerlite/mailerlite-nodejs": "^1.4.1",
    "@prisma/client": "^6.12.0",
    "@sentry/nextjs": "^10",
    "@tailwindcss/typography": "^0.5.16",
    "@tanstack/react-query": "^5.83.0",
    "@trpc/client": "^11.4.3",
    "@trpc/react-query": "^11.4.3",
    "@trpc/server": "^11.4.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@upstash/redis": "^1.35.3",
    "clsx": "^2.1.1",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.525.0",
    "nanoid": "^5.1.5",
    "next": "^14.2.30",
    "openai": "^5.11.0",
    "posthog-js": "^1.258.6",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-markdown": "^10.1.0",
    "rehype-highlight": "^7.0.2",
    "remark-gfm": "^4.0.1",
    "stripe": "^18.3.0",
    "superjson": "^2.2.2",
    "svix": "^1.69.0",
    "tailwind-merge": "^3.3.1",
    "web-vitals": "^4.2.4",
    "zod": "^4.0.14"
  },
  "devDependencies": {
    "@jest/globals": "^30.0.5",
    "@playwright/test": "^1.54.2",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.14",
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18.3.7",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.0",
    "dotenv": "^17.2.1",
    "eslint": "^8.57.1",
    "eslint-config-next": "^15.4.1",
    "jest": "^30.0.5",
    "jest-environment-jsdom": "^30.0.5",
    "jest-mock-extended": "^4.0.0",
    "markdownlint-cli": "^0.45.0",
    "msw-trpc": "^2.0.1",
    "node-fetch": "^3.3.2",
    "playwright": "^1.54.2",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "prisma": "^6.12.0",
    "tailwindcss": "^3.4.17",
    "tsx": "^4.19.2",
    "typescript": "^5.8.3",
    "webpack-bundle-analyzer": "^4.10.2"
  }
}
