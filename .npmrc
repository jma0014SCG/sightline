# pnpm configuration for Vercel deployment

# Disable strict peer dependencies
strict-peer-dependencies=false

# Flatten node_modules for Vercel serverless functions
shamefully-hoist=true
node-linker=hoisted

# Skip lifecycle scripts in CI/Vercel environments
ignore-scripts=false

# Ensure Prisma packages are properly hoisted
public-hoist-pattern[]=*
public-hoist-pattern[]=@prisma/client
public-hoist-pattern[]=@prisma/engines

# Network timeout for slow connections
network-timeout=600000

# Disable frozen lockfile warnings
prefer-frozen-lockfile=false